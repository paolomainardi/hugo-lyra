{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
